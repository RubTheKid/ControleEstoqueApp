@model IEnumerable<ControleEstoqueApp.Models.Produto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_produtosLayout.cshtml";
}

<h1>Produtos</h1>

<a asp-action="AddProduto" class="btn btn-sm btn-primary">Adicionar Produto</a>
<a asp-action="GetProduto" class="btn btn-sm btn-secondary">Obter Produto</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Atualiza</th>
            <th>Deleta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.ProdutoId</td>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>
                    <a asp-action="UpdateProduto" asp-route-id="@produto.ProdutoId"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="DeleteProduto" method="post">
                        <input type="hidden" value="@produto.ProdutoId" name="ProdutoId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>