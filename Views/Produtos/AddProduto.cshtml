@model ControleEstoqueApp.Models.Produto

@{
    ViewData["Title"] = "AddProduto";
    Layout = "~/Views/Shared/_produtosLayout.cshtml";
}

<h1>Adicionar novo produto</h1>
<a asp-action="Index" class="btn btn-sm btn-success">Retornar</a>

<form asp-action="AddProduto" method="post">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input class="form-control" name="Nome" />
    </div>
    <div class="form-group">
        <label for="Preco">Preço:</label>
        <input class="form-control" name="Preco" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Adicionar</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Produto Incluido</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProdutoId</td>
                <td>@Model.Nome</td>
                <td>@Model.Preco</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center panel-body">
        <button type = "submit" class="btn btn-sm btn-primary" asp-area="" asp-controller="Produtos" asp-action="Index">Voltar</button>
    </div>
}
