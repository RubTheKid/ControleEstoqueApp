@model ControleEstoqueApp.Models.Loja
@{
    ViewData["Title"] = "AddLoja";
    Layout = "~/Views/Shared/_lojasLayout.cshtml";
}

<h1>Adicionar nova Loja</h1>

<form asp-action="AddLoja" method="post">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input class="form-control" name="Nome" />
    </div>
    <div class="form-group">
        <label for="Preco">Endereço:</label>
        <input class="form-control" name="Endereco" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Adicionar</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Loja Incluida</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Endereço</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.LojaId</td>
                <td>@Model.Nome</td>
                <td>@Model.Endereco</td>
            </tr>
        </tbody>
    </table>
}