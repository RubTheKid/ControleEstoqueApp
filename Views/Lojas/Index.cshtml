@model IEnumerable<ControleEstoqueApp.Models.Loja>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_lojasLayout.cshtml";
}

<h1>Lojas</h1>

<a asp-action="AddLoja" class="btn btn-sm btn-primary">Adicionar Loja</a>
<a asp-action="GetLoja" class="btn btn-sm btn-secondary">ObterLoja</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Atualiza</th>
            <th>Deleta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loja in Model)
        {
            <tr>
                <td>@loja.LojaId</td>
                <td>@loja.Nome</td>
                <td>@loja.Endereco</td>
                <td>
                    <a asp-action="UpdateLoja" asp-route-id="@loja.LojaId"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="DeleteLoja" method="post">
                        <input type="hidden" value="@loja.LojaId" name="LojaId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>